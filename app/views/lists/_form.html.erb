<%= form_for(list) do |f| %>
  <% if list.errors.any? %>
    <div class="alert alert-danger">
      <% list.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <%= f.submit 'Save', class: 'btn btn-default' %>
<% end %>